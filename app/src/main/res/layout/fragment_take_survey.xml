<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.ui.takesurvey.TakeSurveyFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:fillViewport="true"
        android:fitsSystemWindows="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Name"
                app:layout_constraintTop_toTopOf="@id/guideline3"
                app:layout_constraintStart_toStartOf="@+id/guideline1"
                app:layout_constraintEnd_toEndOf="@id/guideline2"
                />

            <EditText
                android:id="@+id/name_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Enter name"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/name_tv"
                app:layout_constraintStart_toStartOf="@+id/guideline1"
                app:layout_constraintEnd_toEndOf="@id/guideline2"/>


            <TextView
                android:id="@+id/address_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Address"
                app:layout_constraintTop_toBottomOf="@+id/name_et"
                app:layout_constraintStart_toStartOf="@+id/guideline1"
                app:layout_constraintEnd_toEndOf="@id/guideline2"/>

            <EditText
                android:id="@+id/address_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Enter address"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/address_tv"
                app:layout_constraintStart_toStartOf="@+id/guideline1"
                app:layout_constraintEnd_toEndOf="@id/guideline2"/>

            <TextView
                android:id="@+id/age_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Age"
                app:layout_constraintTop_toBottomOf="@+id/address_et"
                app:layout_constraintStart_toStartOf="@+id/guideline1"
                app:layout_constraintEnd_toEndOf="@id/guideline2"/>

            <EditText
                android:id="@+id/age_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Enter age"
                android:inputType="number"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/age_tv"
                app:layout_constraintStart_toStartOf="@+id/guideline1"
                app:layout_constraintEnd_toEndOf="@id/guideline2"/>

            <TextView
                android:id="@+id/gender_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Gender"
                app:layout_constraintTop_toBottomOf="@+id/age_et"
                app:layout_constraintStart_toStartOf="@+id/guideline1"
                app:layout_constraintEnd_toEndOf="@id/guideline2"/>

            <EditText
                android:id="@+id/gender_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Enter your gender"
                android:inputType="text"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/gender_tv"
                app:layout_constraintStart_toStartOf="@+id/guideline1"
                app:layout_constraintEnd_toEndOf="@id/guideline2"/>

            <TextView
                android:id="@+id/last_education_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Last Education"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/gender_et"
                app:layout_constraintStart_toStartOf="@+id/guideline1"
                app:layout_constraintEnd_toEndOf="@id/guideline2"/>

            <EditText
                android:id="@+id/last_education_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Enter your last education"
                android:inputType="text"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/last_education_tv"
                app:layout_constraintStart_toStartOf="@+id/guideline1"
                app:layout_constraintEnd_toEndOf="@id/guideline2"/>

            <TextView
                android:id="@+id/want_to_be_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="What do you want to be"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/last_education_et"
                app:layout_constraintStart_toStartOf="@+id/guideline1"
                app:layout_constraintEnd_toEndOf="@id/guideline2"/>

            <EditText
                android:id="@+id/want_to_be_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Enter what do you want to be"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/want_to_be_tv"
                app:layout_constraintStart_toStartOf="@+id/guideline1"
                app:layout_constraintEnd_toEndOf="@id/guideline2"/>

            <Button
                android:id="@+id/save_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/want_to_be_et"
                app:layout_constraintStart_toStartOf="@+id/guideline1"
                app:layout_constraintEnd_toEndOf="@id/guideline2"
                android:text="Save"/>


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.10"/>


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.90"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.05"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>